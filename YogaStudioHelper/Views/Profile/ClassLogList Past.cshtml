@model IEnumerable<Database.Class_Log>
@using Database;

@{
    ViewBag.Title = "ClassLogList";

    DBMaster db = new DBMaster();

}

<h2>Past Classes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="classes">
    <tr>
        <th>
            Date
        </th>
        <th>
            Class Name
        </th>
        <th>
            Start Time
        </th>
        <th>
            Length
        </th>
        <th>
            Teacher
        </th>
        <th>
            Status
        </th>

    </tr>


    @foreach (var item in Model)
    {

<tr>
    <td>
        @item.Schedule.Class_Date.ToString("MMMM dd, yyyy")
    </td>

    <td>
        @item.Schedule.Class.Class_Name
    </td>
    <td>
        @item.Schedule.Start_Time
    </td>
    <td>
        @item.Schedule.Class.Class_Length
    </td>
    <td>
        @item.Yoga_User.U_First_Name @item.Yoga_User.U_Last_Name

    </td>
    <td>
        @item.Log_Status
    </td>

</tr>
}
}

</table>
