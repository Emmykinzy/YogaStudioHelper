
@model YogaStudioHelper.ViewModels.LoginVM

@{
    ViewBag.Title = "SignUp";
}

    <div class="centerDiv">

        @using (Html.BeginForm())
        {
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Sign Up</h2></td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>@Html.TextBox("Email", null, new { @class = "inputs" })</td>
            </tr>
            <tr>
                <th>Password:</th>
                <td> <input type="password" name="pass" class="inputs"></td>
            </tr>
            <tr>
                <th>Confirm Password:</th>
                <td> <input type="password" name="pass" class="inputs"></td>
            </tr>
            <tr>
                <th>First Name:</th>
                <td>@Html.TextBox("FirstName", null, new { @class = "inputs" })</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Html.TextBox("LastName", null, new { @class = "inputs" })</td>
            </tr>
            <tr></tr>
            <tr>
                <td></td>
                <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Create</button></td>
            </tr>
            <tr><td></td></tr>
            <tr>
                <td><button onclick="goBack()">Go Back</button></td>
            </tr>
        </table>
        }
    </div>

