
@{
    ViewBag.Title = "LogInSignUp";
}

<br />
<br />
<br />
<div class="centerDiv">
    <table class="loginTable">
        @using (Html.BeginForm())
        {
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Log in</h2></td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>@Html.TextBox("Email", null, new { @class = "inputs" })</td>
            </tr>
            <tr>
                <td>Password:</td>
                <td>@Html.Password("Password", null, new { @class = "inputs" })</td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:center"><button type="submit" class="btn btn-default">Login</button></td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:center">New? <a href="LoginSignUp/SignUp">Sign up here</a></td>
            </tr>
        }
    </table>
</div>

