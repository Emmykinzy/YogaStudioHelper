
@{
    ViewBag.Title = "NewPassword";
    var Message = "";
    if (TempData["Message"] != null)
    {
        Message = TempData["Message"].ToString();
    }
    else
    {
        Message = "";
    }
}

<h2>NewPassword</h2>
@Html.Raw(Message)
<div class="centerDiv">

    @using (Html.BeginForm())
    {
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Update Password</h2></td>
            </tr>
            <tr>
                <p>Please enter a password to update your temporary one</p>
            </tr>
            <tr>
                <th>Password:</th>
                <td> <input type="password" name="password1" class="inputs" required="required"></td>
            </tr>
            <tr>
                <th>Confirm Password:</th>
                <td> <input type="password" name="password2" class="inputs" required="required"></td>
            </tr>

            <tr>
                <td></td>
                <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Update Password</button></td>
            </tr>


        </table>
    }
</div>
