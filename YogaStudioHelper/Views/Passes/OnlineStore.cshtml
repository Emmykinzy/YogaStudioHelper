@model IEnumerable<Database.Class_Passes>

@{
    ViewBag.Title = "OnlineStorePasses";
}

<h2>Pass Packages</h2>

<br />
<table class="table">


    @foreach (var item in Model)
    {

        <div class="passStore">
            <div class="passContent">
                <div class="floatLeft passTitle" style="padding-top:8px;">
                    <p>@Html.DisplayFor(modelItem => item.Pass_Name)</p>
                </div>
                <div class="passPurchase floatRight">
                    <div class="floatRight" style="padding-right:25px;">
                        <div class="floatLeft" style="padding-top:8px; padding-right:20px;">@Html.DisplayFor(modelItem => item.Pass_Price)$</div>
                        <button type="submit" class="btn btn-default floatRight">Purchase</button>
                    </div>
                </div>
            </div>
        </div>



    }

</table>


