
@model YogaStudioHelper.ViewModels.HoursWorkedViewModel

@{
    ViewBag.Title = "Hours Worked";
}


@using (Html.BeginForm())
{
    <table class="inputTable">
        <tr>
            <td></td>
            <td style="text-align:center"><h2>Hours Work Report</h2></td>
        </tr>

        <tr>
            <th>Teacher:</th>

            <td>
                @Html.DropDownListFor(m => m.Teachers, new SelectList(Model.Teachers, "U_Id", "U_Last_Name"), new { @id = "classList" })
            </td>
        </tr>

        <tr>
            <th>Start Date:</th>
            <td style="text-align:center">
                <input type="date" name="startDate" required>
            </td>
        </tr>
        <tr></tr>
        <tr>
            <th>End Date:</th>
            <td style="text-align:center">
                <input type="date" name="endDate" required>
            </td>
        </tr>
        <tr></tr>
        <tr>
            <td></td>
            <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Search</button></td>
        </tr>
    </table>

}

