
@{
    ViewBag.Title = "Sales";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>




@using (Html.BeginForm())
{
    <table class="inputTable">
        <tr>
            <td></td>
            <td style="text-align:center"><h2>Monthly Sales Report</h2></td>
        </tr>



        <tr>

            <th>Select Date For Month Report:</th>
            <td class="select">
                <input type="text" id="datepicker" name="datepicker" class="form-control" required />

            </td>

            <script>

                // ttps://www.youtube.com/watch?v=ub-vK97VOhE
                $('#datepicker').datetimepicker({
                    timepicker: false,
                    datepicker: true,
                    format: 'Y-m-d',
                    value: '2019-8-1'
                    
                    // allowTimes: ['']

                })
            </script>
        </tr>
        <tr>
            <td></td>
            <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Search</button></td>
        </tr>
    </table>

}