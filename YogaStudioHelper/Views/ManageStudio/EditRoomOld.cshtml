
@using Database

@{
    ViewBag.Title = "Edit Room";



    Room editRoom;
    if (ViewBag.EditRoom != null)
    {
        editRoom = ViewBag.EditRoom;

        int id = editRoom.Room_Id;

        TempData["EditRoomId"] = id;


    }
    else
    {
        editRoom = new Room();
        //editClass.U_Email = "";
        //editClass.U_First_Name = "";
    }



}

<div class="centerDiv">
    @using (Html.BeginForm())
    {
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Edit Room</h2></td>
            </tr>
            <tr>
                <th>Room Name:</th>
                <td>
                <input type="text" id="roomName" name="roomName" class="inputs" required value="@editRoom.Room_Name" />

                
                </td>
            </tr>
            <tr>
                <th>Room capacity:</th>
                <td>
                
                <input type="number" id="capacity", name="capacity" class="inputs" required value="@editRoom.Room_Capacity" />

                </td>
            </tr>
            <tr></tr>
            <tr>
                <th>Active:</th>
                <td style="text-align:center">

                    <input type="checkbox" id="isActive" name="isActive" checked />
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Edit</button></td>
            </tr>
            <tr><td></td></tr>
            <tr>
                <td><button onclick="goBack()">Go Back</button></td>
            </tr>
        </table>
    }
</div>

