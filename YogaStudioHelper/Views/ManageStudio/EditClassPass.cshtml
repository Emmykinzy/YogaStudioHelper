
@{
    ViewBag.Title = "EditClassPass";
}

    <div class="centerDiv">

        @using (Html.BeginForm())
        {
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Edit Pass</h2></td>
            </tr>
            <tr>
                <th>Class Pass Name:</th>
                <td>@Html.TextBox("ClassPassName", "5 Pass Packet", new { @class = "inputs" })</td>
            </tr>
            <tr>
                <th>Quantity:</th>
                <td>@Html.TextBox("ClassPassQty", 5, new { @class = "inputs", @input = "number" })</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>@Html.TextBox("ClassPassPrice", 29.99, new { @class = "inputs", @input = "number" })</td>
            </tr>
            <tr>
                <th>Active:</th>
                <td style="text-align:center">@Html.CheckBox("isActive", true)</td>
            </tr>
            <tr></tr>
            <tr>
                <td></td>
                <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Edit</button></td>
            </tr>
            <tr><td></td></tr>
            <tr>
                <td><button onclick="goBack()">Go Back</button></td>
            </tr>
        </table>
        }
    </div>
