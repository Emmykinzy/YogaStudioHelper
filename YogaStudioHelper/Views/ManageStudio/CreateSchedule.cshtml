


@model YogaStudioHelper.ViewModels.ScheduleViewModel


@{

    // a model YogaStudioHelper.ViewModels.ScheduleViewModel
    //model Database.Schedule

    ViewBag.Title = "CreateSchedule";
    string message = ViewBag.message;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>


<div class="centerDiv">
    @using (Html.BeginForm())
    {
        if (message != null)
        {
            @Html.Raw(message)
        }
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Create Schedule</h2></td>
            </tr>
            <tr>
                <th>Teacher:</th>
                @{
                    if(ViewBag.tid != null)
                    {
                        Model.SelectedTeacherId = ViewBag.tid;
                    }
                 }
                <td>
                    @Html.DropDownListFor(m => m.SelectedTeacherId, new SelectList(Model.Teachers, "U_Id", "U_Last_Name"), new { @id = "classList" })
                </td>
            </tr>

            <tr>
                <th>Class</th>
                @{
                     if(ViewBag.tid != null)
                    {
                        Model.SelectedClassId = ViewBag.cid;
                    }
                 }
                <td>
                    @Html.DropDownListFor(m => m.SelectedClassId, new SelectList(Model.Classes, "Class_Id", "Class_Name"), new { @id = "classList" })
                </td>



            <tr>
                <th>Room:</th>
                @{
                      if(ViewBag.tid != null)
                    {
                       Model.SelectedRoomId = ViewBag.rid;
                    }
                 }
                <td>
                    @Html.DropDownListFor(m => m.SelectedRoomId, new SelectList(Model.Rooms, "Room_Id", "Room_Name"), new { @id = "classList" })

                </td>
            </tr>

            <tr>

                <th>Time:</th>
                <td class="select">
                    <input type="text" id="picker" name="picker" class="form-control" />

                </td>

                <script>

                    $('#picker').datetimepicker({
                        timepicker: true,
                        datepicker: false,
                        format: 'H:i',
                        value: @if (ViewBag.time != null) {@Html.Raw("'"+ViewBag.time + "'") } else {@Html.Raw("'7:00'") } ,
                        hours12: false,
                        step: 30,
                        allowTimes: [@for (int x = 7; x < 19; x++) { @Html.Raw("'"+x+":00', '"+x+":30',")} @Html.Raw("'19:00'")],


                    })
                </script>
            </tr>
            <tr>
                <th>Date:</th>
                <td><input type="date" class="inputs" name="classDate" id="classDate" required @if (ViewBag.date != null) {@Html.Raw("value=\""+ViewBag.date+"\"") } value="" /></td>

</tr>

<tr>

<td></td>

<td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Create</button></td>
            </tr>
            <tr>
                <td>
                </td>
            </tr>
            <tr>
                <td>@Html.ActionLink("Back", "ScheduleList", "ManageStudio", new { @class = "btn btn-default" })</td>
            </tr>
        </table>

    }
</div>











