
@{
    ViewBag.Title = "EditPromotion";
}

    <div class="centerDiv">
        @using (Html.BeginForm())
        {
        <table class="inputTable">
            <tr>
                <td></td>
                <td style="text-align:center;"><h2>Edit Promo</h2></td>
            </tr>
            <tr>
                <th>Promotion Name:</th>
                <td>@Html.TextBox("PromotionName", "Christmas Promo", new { @class = "inputs" })</td>
            </tr>
            <tr>
                <th>Discount %:</th>
                <td>@Html.TextBox("discount", 20, new { @class = "inputs", @input = "number" })</td>
            </tr>
            <tr><th>OR</th></tr>
            <tr>
                <th>Extra Passes:</th>
                <td>@Html.TextBox("passes", null, new { @class = "inputs", @input = "number" })</td>
            </tr>
            <tr>
                <th>Promo-ed Pass:</th>
                <td class="select">
                    <select id="classPass">
                        <option>5 Pass Packet</option>
                        <option>10 Pass Packet</option>
                        <option>20 Pass Packet</option>
                        <option>30 Pass Packet</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>Promotion End:</th>
                <td><input type="date" class="inputs" value="2019-12-26" name="promoEnd" /></td>
            </tr>
            <tr>
                <th>Active:</th>
                <td style="text-align:center">@Html.CheckBox("isActive", true)</td>
            </tr>
            <tr></tr>
            <tr>
                <td></td>
                <td style="text-align:center"><button style="width:150px" type="submit" class="btn btn-default">Edit</button></td>
            </tr>
            <tr><td></td></tr>
            <tr>
                <td><button onclick="goBack()">Go Back</button></td>
            </tr>
        </table>
        }
    </div>


